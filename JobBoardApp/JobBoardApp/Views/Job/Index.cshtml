@model IEnumerable<JobBoardApp.Models.JobEntity>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Jobs offers</h2>

<p>
    <a asp-action="Insert" class="btn btn-link btn-lg"><span class="glyphicon glyphicon-plus-sign"></span> Create new </a>
</p>
<table id="table_id" class="table table-striped table-hover .table-responsive">
    <thead class="text-blue">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Job)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiresAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Job)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiresAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-lg"><span class="glyphicon glyphicon-pencil"></span></a> 
               
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-lg"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
